<div class="jumbotron mt-5">
  <h1><%= @title %></h1>
</div>

<div class="row col-sm-12">
  <div class="col-sm-3">
    <div class="card text-white bg-primary">
      <div class="card-body">
        <h5 class="card-title">Create your own post</h5>
        <p class="card-text">Lorem ipsum</p>
        <p class="card-text"><%= link_to 'New', new_post_path, class: 'text-white' %></p>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <%= link_to 'Show', post %>
        </div>
      </div>
    </div>
  <% end %>
</div>