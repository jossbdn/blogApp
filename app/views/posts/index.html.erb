<div class="jumbotron mt-5">
  <h1><%= @title %></h1>
</div>

<% @posts.each do |post| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.content %></p>
    <%= link_to 'Show', post %>
  </div>
</div>
<% end %>