<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Home', controller: 'posts', action: 'index' %></li>
    <li class="breadcrumb-item"><%= link_to 'Posts', controller: 'posts', action: 'index' %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @post.title %></li>
  </ol>
</nav>

<article class="card mt-5">
  <div class="card-body">
    <h1><%= @post.title %> <span class="badge"><%= link_to @post.user.email, user_path(@post.user_id)  %></span></h1>
    <h6><%= local_time_ago(@post.updated_at) %></h6>
    <% if @post.user_id == current_user.id %>
      <%= link_to 'Edit', edit_post_path, class: 'btn btn-info' %>
      <%= link_to 'Delete', post_path, class: 'btn btn-danger',
                  method: :delete,
                  data: { confirm: 'Are you sure ?' }
      %>
    <% end %>
    <p class="mt-3"><%= @post.content %></p>

    <hr />
    <h4 class="mt-3 mb-5">Comments <span class="badge badge-secondary"><%= @post.comment.count %></span></h4>
    <ul class="list-group mb-5">
      <% @post.comment.each do |comment| %>
      <li class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= comment.user.username %></h5>
          <small><%= local_time_ago(comment.updated_at) %></small>
        </div>
        <p class="mb-1"><%= comment.content %></p>
        <% if comment.user.id == current_user.id %>
          <%= link_to 'Delete', post_comment_path(comment.post, comment), class: 'btn btn-danger',
                      method: :delete,
                      data: { confirm: 'Are you sure ?' }
          %>
        <% end %>
      </li>
        <% end %>
    </ul>
    <%= simple_form_for ([@post, @post.comment.build]) do |f| %>

      <%= f.input :content %>
      <%= f.submit %>

    <% end %>
  </div>
</article>